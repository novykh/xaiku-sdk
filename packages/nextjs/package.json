{
  "name": "@xaiku/nextjs",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/es6/index.js",
  "jsnext:main": "dist/es6/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build:cjs": "babel src --out-dir dist --copy-files",
    "build:es6": "BABEL_ENV=es6 babel src --out-dir dist/es6 --copy-files",
    "build:umd": "NODE_ENV=production webpack",
    "build": "pnpm run build:umd && pnpm run build:cjs && pnpm run build:es6",
    "test": "jest",
    "lint": "eslint './src/**/*.js'",
    "clean": "rimraf lib dist es coverage node_modules",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "cp-xaiku": "cp -R ./dist ../xaiku/node_modules/@xaiku/react/",
    "to-xaiku": "pnpm run build && pnpm run cp-xaiku",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@xaiku/node": "workspace:*",
    "@xaiku/react": "workspace:*"
  },
  "peerDependencies": {
    "next": "15.x",
    "react": "18.x || 19.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@chromatic-com/storybook": "^3.2.4",
    "@storybook/addon-essentials": "^8.5.6",
    "@storybook/addon-interactions": "^8.5.6",
    "@storybook/addon-onboarding": "^8.5.6",
    "@storybook/blocks": "^8.5.6",
    "@storybook/nextjs": "^8.5.6",
    "@storybook/react": "^8.5.6",
    "@storybook/test": "^8.5.6",
    "@xaiku/babel-config": "workspace:*",
    "@xaiku/eslint-config": "workspace:*",
    "@xaiku/prettier-config": "workspace:*",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock": "^29.7.0",
    "msw": "^2.7.0",
    "msw-storybook-addon": "^2.0.4",
    "next": "^15.1.7",
    "react": "^19.0.0",
    "storybook": "^8.5.6",
    "storybook-addon-module-mock": "^1.3.4",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
